<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- App Logo and Title -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/launcher_icon"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/widget_title"
            android:textColor="@color/widget_text_color"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Quick Actions Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Camera Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp">

            <ImageButton
                android:id="@+id/widget_camera_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/widget_camera_desc"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera_widget" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:text="@string/widget_camera"
                android:textColor="@color/widget_text_color"
                android:textSize="8sp" />

        </FrameLayout>

        <!-- Gallery Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp">

            <ImageButton
                android:id="@+id/widget_gallery_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/widget_gallery_desc"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_gallery_widget" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:text="@string/widget_gallery"
                android:textColor="@color/widget_text_color"
                android:textSize="8sp" />

        </FrameLayout>

        <!-- History Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp">

            <ImageButton
                android:id="@+id/widget_history_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/widget_history_desc"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_history_widget" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:text="@string/widget_history"
                android:textColor="@color/widget_text_color"
                android:textSize="8sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout> 